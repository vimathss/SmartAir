        <Label Content="Adicionar Id de Lab" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top"  FontSize="14" Foreground="White" FontWeight="Bold" />
        <TextBox x:Name="txtid" Margin="100,117,100,87" TextWrapping="Wrap" Height="30" FontSize="14" MaxLength="3" PreviewTextInput="IdTextBox_PreviewTextInput"/>
        <Button Content="Atualizar" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" PreviewMouseLeftButtonDown="AtualizarEsp" FontSize="10" FontWeight="Bold"/>
        <Label x:Name="VoltarBtn" Content="x" HorizontalAlignment="Right" Margin="0,10,19,0" VerticalAlignment="Top" FontSize="36" Foreground="White" MouseLeftButtonDown="VoltarBtn_MouseLeftButtonDown" Cursor="Hand"/>
        <Label Content="Id do Lab:" HorizontalAlignment="Left" Margin="100,91,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>

</Window>
