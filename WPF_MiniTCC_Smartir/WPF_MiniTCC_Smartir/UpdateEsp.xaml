<Window x:Class="WPF_MiniTCC_Smartir.UpdateEsp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MiniTCC_Smartir"
        mc:Ignorable="d"
        Title="SmartAir - Atualizar Esp" Height="250" Width="400"  ShowInTaskbar="False" WindowStartupLocation="CenterScreen"  ResizeMode="NoResize" Icon="/Imagens/Icone Smart Air.png"  Topmost="True" WindowStyle="None">
