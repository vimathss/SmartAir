<Window x:Class="WPF_MiniTCC_Smartir.adicionaradmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MiniTCC_Smartir"
        mc:Ignorable="d"
           Title="SmartAir - Adicionar ADM" Height="720" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/Imagens/Icone Smart Air.png">
    <Grid Background="#FF57C8F6">


        <Border Background="#FF0F1923" CornerRadius="20" BorderThickness="2" Width="600" Height="450">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Width="576">
                <TextBox x:Name="txtidcadastrar" HorizontalAlignment="Stretch" Margin="0,35,0,0" TextWrapping="Wrap" Height="30" FontSize="14" MaxLength="3" PreviewTextInput="IdTextBox_PreviewTextInput"/>
                <PasswordBox x:Name="pswsenha" HorizontalAlignment="Stretch" Margin="0,35,0,0"  Height="30" FontSize="14" MaxLength="20" />
                <TextBox x:Name="txtnomecadastrar" HorizontalAlignment="Stretch" Margin="0,35,0,0" TextWrapping="Wrap" Height="30" FontSize="14" MaxLength="100"/>
                <TextBox x:Name="txtemailcadastrar" HorizontalAlignment="Stretch" Margin="0,35,0,0" TextWrapping="Wrap" Height="30" FontSize="14" MaxLength="100"/>
            </StackPanel>
        </Border>
        <Label Content="CADASTRAR ADM" HorizontalAlignment="Center" Margin="0,207,0,0" VerticalAlignment="Top"  FontSize="14" Foreground="White" FontWeight="Bold"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="545,224,0,0" VerticalAlignment="Top"  Width="34" Foreground="WhiteSmoke"/>
        <Label Content="SENHA" HorizontalAlignment="Left" Margin="543,289,0,0" VerticalAlignment="Top"  Width="72" Foreground="WhiteSmoke"/>
        <Label Content="NOME" HorizontalAlignment="Left" Margin="543,353,0,0" VerticalAlignment="Top"  Width="123" Foreground="WhiteSmoke"/>
        <Label Content="EMAIL" HorizontalAlignment="Left" Margin="545,418,0,0" VerticalAlignment="Top"  Width="106" Foreground="WhiteSmoke"/>

        <Button x:Name="btncadastrar" Content="Cadastrar" HorizontalAlignment="Left"  VerticalAlignment="Bottom" FontSize="18" Click="btncadastrar_Click" Margin="582,0,0,160"/>
        <Label x:Name="VoltarBtn" Content="x" HorizontalAlignment="Right" Margin="0,50,50,0" VerticalAlignment="Top" FontSize="36" Foreground="#FF0F1923" MouseLeftButtonDown="VoltarBtn_MouseLeftButtonDown" Cursor="Hand"/>
    </Grid>
</Window>
